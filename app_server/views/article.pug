extends layout

block content
  .container
    .row
      .col-xs-12.col-sm-12
        h1= title
          h6
            p #{author} -              
              span= moment(date).format('DD/MM/YYYY')
              
      
      .col-xs-12
        if img
          img.float-left.mr-4.mb-4(src=`/img/${img}` width="50%" )   
        p.articlebody.text-wrap.text-justify !{body}
        
           
        hr