extends layout

block content
  h2.display-3 Articles
  p from our community members  
    .card-columns
      each art in articles  
        
        .card
          if art.img
            img.card-img-top(src=`/img/${art.img}`)
          .card-body
            p.text-small 
              span= moment(art.date).format('DD MMMM YYYY')  
            h5.card-title.font-weight-bold #{art.title}                            
            .card-text #{art.body.slice(0,100)}...                   
            a.card-link(href=`/article/${art.id}`) Read Article
      
  
  