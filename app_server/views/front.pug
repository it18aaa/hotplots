extends layout

block content
    .row
        .col-md-12
            h1 HotPlots! 
            p Online Gardening Community
    .row.p-2
        .col-md-8.border.p-2
            // article row - 
            //
            .row.border-bottom
                .col-12
                    h4.border-bottom Top Articles
                    .row.p-2
                        each a in [1,2,3]
                            .col-md-4.border-right
                                h6.border-bottom TITLE

                                    img.w-25.mr-1.float-left(src=`/img/1.jpg`)
                                small.text-wrap BODY TEXT...
                                .row.border-top
                                    .col-md-6
                                        small 9 likes
                                    .col-md-6 
                                        p.text-right
                                            a(href=`/articles/1232`) read

            .row.border-bottom
                .col-12
                    h4.border-bottom Featured Author
                    .row.p-2
                        each a in [1,2,3]
                            .col-md-4.border-right
                                h6.border-bottom TITLE
                                img.w-25.mr-1.float-left(src=`/img/1.jpg`)
                                small.text-wrap BODY TEXT... 
                                p.text-right
                                    a(href=`/articles/1.jpg`) read
            // article row - fea
            //
            .row.border-bottom
                .col-12
                    h4.border-bottom Tag of the Day
                    .row.p-2
                        each a in [1,2,3]
                            .col-md-4.border-right
                                h6.border-bottom #{a.title}
                                img.w-25.mr-1.float-left(src=`/img/1.jpg`)
                                small.text-wrap BODY TEXT... 
                                p.text-right
                                    a(href=`/articles/1.jpg`) read  
            .row
                .col-md-12  
                    a(href='/questions/list') All Articles           

        .col-md-4.border.p-2
            .row.border-bottom  
                .col-12
                    h5.p-1 Most active questions
                        each q in [1,2,3,4]
                            h6 
                                a(href='#') Question TITLE
                            small BODY

                            p RATING votes, NO. answers.
                    a(href='/questions/list') All Questions



